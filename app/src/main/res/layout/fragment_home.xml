<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.luceafarul.quizfitter.view.HomeFragment"
    android:id="@+id/clHome">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivGymWP"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/gym_wallpaper2" />

        <ImageView
            android:id="@+id/ivFoodWP"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/food_wallpaper2" />

        <ImageView
            android:id="@+id/ivPlay"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/rsz_quiz_wallpaper" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
