<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    tools:context="com.luceafarul.quizfitter.view.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTraining"
            android:layout_width="370dp"
            android:layout_height="150dp"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/menu_gym"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp" />

                <View
                    android:id="@+id/svgTraining"
                    android:layout_width="163dp"
                    android:layout_height="111dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/menu_training" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardQuiz"
            android:layout_width="370dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:orientation="horizontal">

                <View
                    android:id="@+id/svgQuiz"
                    android:layout_width="163dp"
                    android:layout_height="111dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/menu_quiz" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/quiz"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFood"
            android:layout_width="370dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="45dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/menu_food"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp" />

                <View
                    android:id="@+id/svgFood"
                    android:layout_width="163dp"
                    android:layout_height="111dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/menu_food" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
